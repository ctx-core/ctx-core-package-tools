{
  "name": "@ctx-core/ctx-core-package-tools",
  "version": "8.0.29",
  "description": "package tools for the @ctx-core monorepo",
  "keywords": [
    "ctx-core"
  ],
  "homepage": "https://github.com/ctx-core/ctx-core-package-tools#readme",
  "bugs": {
    "url": "https://github.com/ctx-core/ctx-core-package-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ctx-core/ctx-core-package-tools/issues"
  },
  "license": "Apache-2.0",
  "author": "Brian Takita",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "bin": {
    "package-refactor": "bin/package-refactor.mjs",
    "symlink_src_assets_to_dist": "bin/symlink_src_assets_to_dist.sh"
  },
  "scripts": {
    "build": "npm run clean && npm run copy-mjs && npm run compile",
    "clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
    "compile": "./node_modules/.bin/tsc -b .",
    "copy-mjs": "cd dist && echo \"require = require('esm')(module/*, options*/)\nmodule.exports = require('./main.js')\nexport * from './index.js'\" > index.cjs",
    "exec": "$@"
  },
  "dependencies": {
    "@ctx-core/array": "workspace:^23.0.6"
  },
  "devDependencies": {
    "@types/glob": "7.1.4",
    "@types/node": "^16.3.2",
    "esm": "^3.2.25",
    "globby": "^11.0.4",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "access": "public",
    "cache": "~/.npm"
  }
}
